<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.cannabisitterapp.AddPlantActivity">


    <ImageView android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/result_textview"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_barcode_captured"
        android:textSize="22sp"
        android:freezesText="true"
        android:gravity="center"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/scan_barcode_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/scan_barcode_button"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/scan_barcode_button"
        android:background="@color/primary_dark"
        android:textColor="@color/white"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
